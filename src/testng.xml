<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="Suite">
    <listeners>
        <listener class-name="org.testng.reporters.XMLReporter" />
    </listeners>

    <test name="Form Content Test">
        <classes>
            <class name="Formic.testcases.TestFormContent" />
        </classes>
    </test>

    <test name="Login Test">
        <classes>
            <class name="Formic.testcases.LoginTest" />
        </classes>
    </test>

    <suite-files>
        <!-- Other suite files if needed -->
    </suite-files>
    <parameter name="outputDirectory" value="test-output"/> <!-- Specify the output directory -->
</suite>

